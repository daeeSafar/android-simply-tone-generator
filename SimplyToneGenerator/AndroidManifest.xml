<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.simplyadvanced.simplytonegenerator"
    android:versionCode="4"
    android:versionName="1.2.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.simplyadvanced.simplytonegenerator.FragmentActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.simplyadvanced.simplytonegenerator.ActivityPreferences"
            android:label="@string/title_activity_activity_preferences"
            android:parentActivityName="net.simplyadvanced.simplytonegenerator.FragmentActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.simplyadvanced.simplytonegenerator.FragmentActivityMain" />
        </activity>
    </application>

</manifest>
